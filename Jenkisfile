pipeline {

  agent any
  environment {
    //adding a comment for the commit test
  
    MULE_VERSION = '4.4.0'
    BG = "Mulesoft"
    WORKER = "Micro"
    M2SETTINGS = "/Users/madhuri/Desktop/POCs/munittestcases/Settings.xml"
  }
  stages {
    stage('Build') {
      steps {
            export M2_HOME=/opt/homebrew/Cellar/maven/3.8.7/libexec
            export PATH=$PATH:$M2_HOME/bin
            mvn -B -U -e -V clean -gs %M2SETTINGS% -DskipTests package
      }
    }

    stage('Test') {
      steps {
          export M2_HOME=/opt/homebrew/Cellar/maven/3.8.7/libexec
          export PATH=$PATH:$M2_HOME/bin
          mvn test
      }
    }

     stage('Deploy Development') {
      environment {
        ENVIRONMENT = 'Sandbox'
        APP_NAME = 'munittestcases'
      }
      steps {
            export M2_HOME=/opt/homebrew/Cellar/maven/3.8.7/libexec
            export PATH=$PATH:$M2_HOME/bin
            mvn -U -V -e -B -gs %M2SETTINGS% -DskipTests deploy -DmuleDeploy -Dmule.version="%MULE_VERSION%" -Danypoint.username=madhurinallapa -Danypoint.password=Vibha@00 -Dcloudhub.app="%APP_NAME%" -Dcloudhub.environment="%ENVIRONMENT%" -Dcloudhub.bg="%BG%" -Dcloudhub.worker="%WORKER%"
      }
    }
    
  }
}