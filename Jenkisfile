pipeline {

  agent any
  environment {

    M2SETTINGS = "/Users/madhuri/Desktop/POCs/munittestcases/Settings.xml"
  }
  stages {
    stage('Build') {
      steps {
            bat 'mvn -B -U -e -V clean -gs %M2SETTINGS% -DskipTests package'
      }
    }


     stage('Deploy Development') {
      environment {
        ENVIRONMENT = 'Sandbox'
        APP_NAME = 'sandbox-omni-channel-api-MN'
      }
      steps {
            bat 'mvn -U -V -e -B -gs %M2SETTINGS% -DskipTests deploy -DmuleDeploy -Dmule.version="4.4.0" -Danypoint.username="madhurinallapa" -Danypoint.password="Vibha@00" -Dcloudhub.app="munittestcases" -Dcloudhub.environment="Sandbox" -Dcloudhub.bg="Mulesoft" -Dcloudhub.worker="1"'
      }
    }

    }
  }
