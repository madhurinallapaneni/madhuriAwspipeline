pipeline {

  agent any
  environment {
   
    M2SETTINGS = "Settings.xml"
  }
  stages {
    stage('Build') {
      steps {
       
           sh """
				export M2_HOME=/opt/homebrew/Cellar/maven/3.8.7/libexec
				export PATH=$PATH:/opt/homebrew/Cellar/maven/3.8.7/libexec/bin 
				mvn -B -U -e -V clean -gs %M2SETTINGS% -DskipTests package
               """ 
         
      }
    }

   
    
  }
}